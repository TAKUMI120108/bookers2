

<h2>User info</h2>
  <div>
    <div class="border-bottom m-4 " >
    <% if user.profile_image.attached? %>
    <%= image_tag user.get_profile_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %></div>
    <div class="border-bottom m-4 " >name<%= user.name %></div>
    <div class="m-4" >introduction<%= user.introduction %></div>
  </div>
<div class="d-flex justify-content-center border rounded p-2">
<%= link_to edit_user_path(user), class: "btn btn-secondary w-100" do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div calss ="p-3">
<h2>New book</h2>
<%= form_with model: book, url: '/books',method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Option</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book"  %>
<% end %>


