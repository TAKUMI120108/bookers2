<div class="container"> 
<div class="row"> 
<div class="col-md-3">

<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this obj from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'index', user:@user, book:@book %>
</div>
<div class="col-md-8 offset-md-1">
  
<h2>Books</h2>

<table class="table">
  <thead>
    <tr>
      <th class="col text-cente">Title</th>
      <th class="col">Option</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
<% @books.each do |book| %>
      <tr>
       <td class="col" ><%=link_to user_path(book.user.id) do %>
         <%= image_tag book.user.get_profile_image %>
          <% end %>
           </td>
      <td class="col"><%= link_to book.title, book_path(book.id) %></td>
      <td class="col"><%= book.body %></td>
      </tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
