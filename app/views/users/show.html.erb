<h2>User info</h2>
  <div>
    <%= image_tag @user.get_image %>
    <p>name<%= @user.name %></p>
    <p>introduction</p>
  </div>


<h2>New Book</h2>
<%= form_with model: @book, url: '/books',method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book"  %>
<% end %>


<h2>Books</h2>
<% @books.each do |book| %>
<p>Title</p>
<span><%= book.title %></span>
<p>Body</p>
<span><%= book.body %></span>
<% end %>